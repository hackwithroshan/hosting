{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.ts" },
    { "src": "/uploads/(.*)", "dest": "/backend/index.ts" },
    {
      "src": "/((?!api/|uploads/).*\\..*)",
      "dest": "/$1"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}
